-lists.each do |l|
  .box.box-light.shadow-1.mtm.flex-item-double
    .box-bottom.email-list
      %ul
        %li
          =link_to ml_list_path(l) do
            %b=l.name
            =l.email
            (#{l.users.count+l.ml_external_emails.count} membres)
          %span.fr
            -if l.users.include?(user)
              = link_to ml_list_leave_path(l.id, user.id), title: 'Me desinscire de la liste', rel: 'tooltip', :remote=>true do
                Me desinscrire
                %i.zmdi.zmdi-minus-circle.icon-padding-list.red
            -else
              = link_to ml_list_join_path(l.id, user.id), title: "M'inscrire Ã  la liste", rel: 'tooltip', :remote=>true do
                M'inscrire
                %i.zmdi.zmdi-plus-circle.icon-padding-list.green
          %span
            %br/
            =l.description
